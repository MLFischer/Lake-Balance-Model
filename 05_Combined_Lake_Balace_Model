#lines(c$altitude_year,col="slateblue2",lty=2)
#axis (1, at=seq (0 ,100 ,10) ,paste (seq (0 ,100 ,10) ), cex.axis =0.75 )
#axis (2, at=seq (0 ,50 ,10) ,paste (seq (0 ,50 ,10) ), cex.axis =0.75 )

