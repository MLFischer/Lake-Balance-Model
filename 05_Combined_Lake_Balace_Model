plot ( a$altitude_year,type="n",xlab ="Years after Onset/ Offset",
ylab ="Lake Level a.s.l.",xaxt ="n",yaxt ="n",cex.lab =0.75 , bg="grey",xlim=c(0,500),ylim=c(0,50),col="aquamarine1")
